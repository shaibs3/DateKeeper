{
  "name": "birthday-buddy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:up && sleep 3 && npm run dev:next",
    "dev:next": "next dev",
    "dev:setup": "./scripts/dev.sh",
    "dev:full": "./scripts/dev.sh",
    "dev:staging": "APP_ENV=staging next dev",
    "build": "prisma generate && next build",
    "build:staging": "APP_ENV=staging npm run build",
    "build:production": "APP_ENV=production npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\" \"e2e/**/*.{ts,tsx,js,json}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\" \"e2e/**/*.{ts,tsx,js,json}\" \"*.{js,json,md}\"",
    "pre-commit": "./scripts/pre-commit-check.sh",
    "setup:prod-db": "./scripts/setup-production-db.sh",
    "setup:neon": "./scripts/neon-setup-helper.sh",
    "setup:vercel-env": "./scripts/vercel-env-setup.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run test:e2e:ci-check",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:simple": "playwright test",
    "test:e2e:script": "./scripts/run-e2e-tests.sh",
    "test:e2e:clean": "npm run db:up && sleep 3 && npm run db:migrate:deploy && playwright test",
    "test:e2e:registration": "playwright test registration-flow-complete.spec.ts user-registration.spec.ts",
    "test:e2e:auth": "playwright test auth-flow.spec.ts auth-flow-mocked.spec.ts registration-flow-complete.spec.ts",
    "test:e2e:staging": "BASE_URL=https://datekeeper-staging.vercel.app playwright test",
    "test:e2e:production": "BASE_URL=https://datekeeper.vercel.app playwright test --grep \"smoke\"",
    "test:e2e:ci-check": "if [ \"$CI\" = \"true\" ]; then npm run db:migrate:deploy && playwright test; else npm run db:up && sleep 3 && npm run db:migrate:deploy && playwright test; fi",
    "test:e2e:local": "npm run db:up && sleep 3 && npm run db:migrate:deploy && playwright test",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "type-check": "tsc --noEmit",
    "env:check": "node scripts/check-env.js",
    "oauth:setup": "./scripts/setup-oauth.sh",
    "vercel:setup": "./scripts/setup-vercel-ci.sh"
  },
  "dependencies": {
    "@auth/core": "^0.39.0",
    "@auth/prisma-adapter": "^2.9.0",
    "date-fns": "^3.3.1",
    "next": "^15.3.3",
    "next-auth": "^5.0.0-beta.15",
    "nodemailer": "^6.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-select": "^5.10.1",
    "resend": "^4.5.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/react-select": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.28",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.4.2"
  }
}
